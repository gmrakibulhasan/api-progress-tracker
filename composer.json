{
    "name": "gmrakibulhasan/api-progress-tracker",
    "description": "A professional Laravel package for tracking API development progress with task management and team collaboration",
    "type": "library",
    "version": "1.0.4",
    "license": "MIT",
    "keywords": ["laravel", "api", "progress", "tracker", "task", "management", "livewire", "dashboard"],
    "homepage": "https://github.com/gmrakibulhasan/api-progress-tracker",
    "authors": [
        {
            "name": "Rakibul Hasan",
            "email": "gmrakibul.17@gmail.com",
            "homepage": "https://github.com/gmrakibulhasan",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Gmrakibulhasan\\ApiProgressTracker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gmrakibulhasan\\ApiProgressTracker\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Gmrakibulhasan\\ApiProgressTracker\\ApiProgressTrackerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
